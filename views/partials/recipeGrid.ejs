<% recipeCoverClass = locals.large ? 'recipe-cover-large' : '' %> <%
recipeGridClass = locals.large ? 'recipe-grid-large' : '' %>
<div class="recipe-grid <%= recipeGridClass %>">
  <% recipes.forEach(recipe => { %>
  <a href="/recipes/<%= recipe.id %>">
    <img
      class="recipe-cover <%= recipeCoverClass %>"
      src="<%= recipe.coverImagePath %>"
    />
  </a>
  <% }) %>
</div>
