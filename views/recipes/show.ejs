<h2><%= recipe.title %></h2>
<div class="recipe-details">
  <div>
    <img class="recipe-cover" src="<%= recipe.coverImagePath %>" />
    <div class="recipe-details-btn-grid">
      <a class="btn btn-yes" href="/recipes/<%= recipe.id %>/edit">Ã„ndra</a>
      <%- include('../partials/deleteForm', { url: `/recipes/${recipe.id}` }) %>
      <a
        class="btn btn-yes recipe-details-cook-button"
        href="/cooks/<%= recipe.cook.id %>"
        >Visa kock</a
      >
    </div>
  </div>

  <div class="recipe-details-grid">
    <div class="recipe-details-label">Kock:</div>
    <div><%= recipe.cook.name %></div>
    <div class="recipe-details-label">Utgivningsdatum:</div>
    <div><%= recipe.publishDate.toDateString() %></div>
    <div class="recipe-details-label">Tid att tillverka:</div>
    <div><%= recipe.time %> min</div>
    <div class="recipe-details-label">Beskrivning:</div>
    <div><%= recipe.description %></div>
  </div>
</div>
